<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>FestivalHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>lineup</servlet-name>
        <servlet-class>FestivalLineupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>lineup</servlet-name>
        <url-pattern>/lineup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bands</servlet-name>
        <servlet-class>FestivalBandsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bands</servlet-name>
        <url-pattern>/bands</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>setlists</servlet-name>
        <servlet-class>FestivalSongServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>setlists</servlet-name>
        <url-pattern>/setlists</url-pattern>
    </servlet-mapping>    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
